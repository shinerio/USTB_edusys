<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ustb.superui.ustbedu.activity.show_class">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical"  >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="#fff"
            android:onClick="show_class_back"
            android:background="@drawable/title_btn_back"/>
        <TextView
            android:id="@+id/class_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程表"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/class_info_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="80dp"
        >
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/time_is_class"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:text="当前时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="10dp"
            android:id="@+id/is_class"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:text="您当前没有课程"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
        android:id="@+id/class1"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="暂无课程"
        android:background="@drawable/class_info_first"
        />
        <TextView
            android:id="@+id/class2"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="暂无课程"
            android:background="@drawable/class_info_item"
            />
        <TextView
            android:id="@+id/class3"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="暂无课程"
            android:background="@drawable/class_info_item"
            />
        <TextView
            android:id="@+id/class4"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="暂无课程"
            android:background="@drawable/class_info_item"
            />
        <TextView
            android:id="@+id/class5"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="暂无课程"
            android:background="@drawable/class_info_item"
            />
        <TextView
            android:id="@+id/class6"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="暂无课程"
            android:background="@drawable/class_info_last"
            />
    </LinearLayout>
</LinearLayout>
